{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/__tests__/*.spec.ts",
    "dist/**/*"
  ],
}
